<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#5D8AA8"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Enter app name"
        android:textColor="#ffffff"
        android:layout_marginTop="15dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/appNameText"
        android:background="#ffffff"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textColor="#ffffff"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="15dp"
        android:text="Username"
        android:id="@+id/textView1"
        android:layout_below="@+id/appNameText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/usernameText"
        android:background="#ffffff"
        android:layout_below="@+id/textView1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Password"
        android:textColor="#ffffff"
        android:layout_marginTop="15dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/passtextView"
        android:layout_below="@+id/usernameText"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/usernameText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/passwordText"
        android:background="#ffffff"
        android:layout_below="@+id/passtextView"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/passtextView"
        android:inputType="textPassword" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Login"
        android:id="@+id/loginButton"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/passwordText"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/passwordText" />

</RelativeLayout>
